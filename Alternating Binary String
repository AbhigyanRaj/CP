#include <iostream>
#include <string>
using namespace std;

void change(char& a) {
    if (a == '0') {
        a = '1';
    } else {
        a = '0';
    }
}

int main() {
    int t;
    cout << "Enter the Number of test cases: ";
    cin >> t;
    while (t--) {
        int count = 0;
        int n;
        cout << "Enter the Number of elements: ";
        cin >> n;
        string bin = "";
        for (int i = 0; i < n; i++) {
            string digi;
            cout << "Enter the " << i + 1 << " element: ";
            cin >> digi;
            bin += digi;
        }
        cout << "Your Binary Number is: " << bin << endl;
        if (n < 2) {
            cout << 0 << endl;
        } else {
            for (int i = 1; i < n ; i++) {
                if (bin[i] == bin[i - 1]) {
                    count++;
                    for (int j = i ; j < n; j++) {
                        change(bin[j]);
                        
                    }
                  cout<<"Your iterated bin : "<<bin<<endl;
                } 
                else {
                    break; 
                }
            }
        }
        cout <<"Number of chnges : " <<count << endl;
    }
    return 0;
}
